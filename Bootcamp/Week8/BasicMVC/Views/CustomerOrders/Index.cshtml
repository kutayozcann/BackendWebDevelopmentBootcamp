@model BasicMVC.Models.CustomerOrderViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Customer Orders Details</title>
</head>
<body>

<h2>Customer Details</h2>
<table border="1">
    <tr>
        <th>Customer ID</th>
        <td>@Model.Customer.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Customer.FirstName @Model.Customer.LastName</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Customer.Email</td>
    </tr>
</table>

<h2>Orders</h2>
<table border="1">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model.Orders)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.ProductName</td>
            <td>@order.Price.ToString("C")</td>
            <td>@order.Quantity</td>
        </tr>
    }
    </tbody>
</table>


</body>
</html>